{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BECIA Interaction Protocol – Sample Schema (v1.1)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier of the sample."
    },
    "text": {
      "type": "string",
      "description": "The message being interpreted."
    },
    "language": {
      "type": "string",
      "description": "Language code (e.g. EN)."
    },
    "emojis": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of emojis or nonverbal markers present in the message."
    },
    "tone": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 3,
      "description": "Primary tones inferred (1–3 tags)."
    },
    "intention": {
      "type": "string",
      "description": "Primary communicative intention (e.g. reassurance, teasing, softening, distancing)."
    },
    "context_note": {
      "type": "string",
      "description": "Short expert reasoning describing how context affects interpretation."
    }
  },
  "required": ["id", "text", "language", "tone", "context_note"]
}
